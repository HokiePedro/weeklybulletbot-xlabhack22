{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "removeComments": true
    },
    "include": [
        "src",
        "src/**/*.json"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}